FROM node:18-alpine

WORKDIR /app

# Install dependencies
COPY package*.json ./
RUN npm install

# Copy rest of the code
COPY . .

# If backend uses env var PORT, fine. Otherwise check index.js / app.js
# Example: app.listen(process.env.PORT || 5000)
ENV PORT=5000

EXPOSE 5000

CMD ["npm", "start"]
